<div
    id="custom-cursor"
    class="fixed top-0 left-0 w-8 h-8 pointer-events-none z-[9999] hidden md:block"
>
    <div
        class="cursor-dot w-2 h-2 bg-brand rounded-full absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
    >
    </div>
    <div
        class="cursor-ring w-8 h-8 border border-brand/30 rounded-full absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 transition-transform duration-300 ease-out"
    >
    </div>
</div>

<script>
    import gsap from "gsap";

    const cursor = document.querySelector("#custom-cursor");
    const ring = document.querySelector(".cursor-ring");
    const dot = document.querySelector(".cursor-dot");

    if (cursor) {
        window.addEventListener("mousemove", (e) => {
            gsap.to(cursor, {
                x: e.clientX,
                y: e.clientY,
                duration: 0.1,
                ease: "power2.out",
            });

            gsap.to(ring, {
                x: 0,
                y: 0,
                duration: 0.5,
                ease: "power3.out",
            });
        });

        document.querySelectorAll("a, button, .interactive").forEach((el) => {
            el.addEventListener("mouseenter", () => {
                gsap.to(ring, {
                    scale: 1.5,
                    borderColor: "rgba(192, 138, 126, 0.8)",
                    backgroundColor: "rgba(192, 138, 126, 0.1)",
                    duration: 0.3,
                });
                gsap.to(dot, {
                    scale: 0.5,
                    duration: 0.3,
                });
            });
            el.addEventListener("mouseleave", () => {
                gsap.to(ring, {
                    scale: 1,
                    borderColor: "rgba(192, 138, 126, 0.3)",
                    backgroundColor: "transparent",
                    duration: 0.3,
                });
                gsap.to(dot, {
                    scale: 1,
                    duration: 0.3,
                });
            });
        });
    }
</script>

<style>
    #custom-cursor {
        mix-blend-mode: difference;
        pointer-events: none;
    }
    body.mobile-menu-open #custom-cursor {
        display: none !important;
    }
    .cursor-dot {
        background-color: white; /* Contrast with charcoal via mix-blend-mode */
    }
    .cursor-ring {
        border-color: rgba(255, 255, 255, 0.5);
    }
</style>
